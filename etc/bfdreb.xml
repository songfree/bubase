<?xml version="1.0" encoding="GB2312"?>
<package>
   <head>
     <loglevel remark="日志跟踪级别0严重错误1重要错误2一般错误3警告4提示警告5调试信息">5</loglevel>
     <dataloglevel remark="日志跟踪级别0严重错误1重要错误2一般错误3警告4提示警告5调试信息">5</dataloglevel>
     <logfile remark="记录日志信息的文件名,前加日期">dreb.log</logfile>
     <logsize remark="日志文件的大小字节，<1024不限制，大于则分成多个日志文件">10240000</logsize>
     <datalogsize remark="DATA日志文件的大小字节，<1024不限制，大于则分成多个日志文件">10240000</datalogsize>
     <ListenPort remark="数据总线对外提供客户端服务的侦听端口">9011</ListenPort>
     <nodeid remark="数据总线公共编号">200</nodeid>
     <nodepid remark="数据总线私有编号">1</nodepid>
     <iscompress remark="若数据未压缩，数据总线是否自动压缩0否1是">0</iscompress>
     <regotherdreb remark="不向连接的其它总线注册为0，否则为1">1</regotherdreb>
     <maxconnectnum remark="对外提供服务的最大连接，大于最大服务数但不要超过640">100</maxconnectnum>
     <noderoutetime remark="节点路由的间隔">10</noderoutetime>
     <svrroutetime remark="服务功能路由的间隔">30</svrroutetime>
     <svrdelaytime remark="服务队列过期时间">300</svrdelaytime>
     <funcdelaytime remark="服务功能过期时间">300</funcdelaytime>
     <heartcheck remark="针对连接的客户端或服务端是否发送心跳0否1是">1</heartcheck>
     <closeheartnum remark="发送心跳个数后仍未收到心跳应答，断开此连接">5</closeheartnum>
     <sendwindownum remark="连接的发送数据个数限制0不限制，最小100">0</sendwindownum>
     <muthread remark="接收和处理是否两个线程">0</muthread>
     <routeprint remark="将路由信息记录到日志文件">1</routeprint>
     <monitor use="0" host="0" remark="use为主动报告选项，0不报告 host为主机资源报告选择0不报告">
        <drebid>0</drebid>
        <drebpid>0</drebpid>
        <svrid>0</svrid>
        <svrpid>0</svrpid>
        <txcode>99001</txcode>
     </monitor>
   </head>
   <pack drebnum="0" remark="连接的数据总线的ip端口、节点编号及带宽,单位为K">
      <dreba ip="172.168.65.107" port="10001"  bandwidth="102400" remark="连接的数据总线的ip端口、节点编号及带宽,单位为K" />
      <drebb ip="172.168.65.107" port="10002"  bandwidth="102400" remark="连接的数据总线的ip端口、节点编号及带宽,单位为K" />
   </pack>
</package>
